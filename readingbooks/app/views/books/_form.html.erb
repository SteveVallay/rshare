<%= form_for(@book,:html=>{:id =>'book_form'}) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field control-group">
    <%= f.label :select_file %><br>
    <%= f.file_field :file ,class: "select-file btn", required: true%>
  </div>
  <div class="field control-group">
    <%= f.label "Name:", class: "control-label"%>
    <div>
      <%= f.text_field :name ,class: "book-name-input", placeholder: "Input book name here"%>
    </div>
  </div>
  <div class="field">
    <%= f.label "Desc:" %><br>
    <%= f.text_area :desc ,class: "book-desc-input", placeholder: "Intro the book here" %>
  </div>
  <div class="field">
    <%= f.label "Image:" %><br>
    <%= f.text_field :image,class: "book-image-input", placeholder: "Input cover image url here"%>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>

 <script type="text/javascript">
$().ready(function () {

$("#book_form").validate({
debug:true,
rules:{
"book[file]" :{required:true},
"book[name]" :{required:true},
"book[desc]" :{required:true},
"book[image]":{required:true},
},
 highlight: function(element) {
    $(element).closest('.control-group').removeClass('success').addClass('error');
  },
  success: function(element) {
    element
    .text('OK!').addClass('valid')
    .closest('.control-group').removeClass('error').addClass('success');
  }
});
});
 </script>