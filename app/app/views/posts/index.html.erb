<h1>All files</h1>


<p>
<%= link_to "Upload" , new_post_path %>
</p>
<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>file name</th>
        <th>file path</th>
    </tr>
   <% @posts.each do |post| %>
   <tr>
       <td><%= post.title %></td>
       <td><%= post.text %></td>
       <td><%= post.origin_name%></td>
       <td><%= link_to 'Show', post_path(post) %></td>
   </tr>
   <% end %>
</table>
