<h1>new share </h1>

<%= form_for :post ,url: posts_path ,:html=>{:id=>"new_post_form"} do |f| %>
  <p>
  <%= f.label "Title(required)"%> </br>
  <%= f.text_field :title %>
  </p>

  <p>
  <%= f.label "description(required)" %> </br>
  <%= f.text_area :text %>
  </p>

  <p>
  <%= f.label "File (required)" %></br>
  <%= f.file_field :name %>
  </p>

  <p>
    <%= f.submit "Submit"%>
  </p>

  <% end %>

 <p>
 <%= link_to "Back", posts_path %>
 </p>
 <script type="text/javascript">
$().ready(function () {

$("#new_post_form").validate({
debug:false,
rules:{
"post[title]":{required:true},
"post[text]":{required:true},
"post[name]":{required:true},
}
});
});
 </script>
